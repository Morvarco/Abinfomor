#Questo che segue Ã¨ un piccolo script bash per copiare due file da una directory nota ad un'altra

# specificare i nomi dei due file
file1="nome_file1"
file2="nome_file2"

# specificare la directory di origine e di destinazione
dir_origine="percorso directory di origine"
dir_destinazione="percorso directory di destinazione/"

# effettuare la copia dei due file specificati
cp "${dir_origine}${file1}" "${dir_destinazione}"
cp "${dir_origine}${file2}" "${dir_destinazione}"
